<div class="flashError">
    <% if(success && success.length > 0) {%>
        <div class="alert alert-success alert-dismissible fade show rounded-0 p-2 d-flex align-items-center justify-content-between" role="alert">
            <p class="mb-0"><%= success %></p>
            <button type="button" class="border-0 bg-transparent p-0" data-bs-dismiss="alert" aria-label="Close">
                <i class="fa-solid fa-xmark"></i>
            </button>
        </div>
    <% } %>
    
    <% if(error && error.length > 0) {%>
        <div class="alert alert-danger alert-dismissible fade show rounded-0 p-2 d-flex align-items-center justify-content-between" role="alert">
            <p class="mb-0"><%= error %></p>
            <button type="button" class="border-0 bg-transparent p-0" data-bs-dismiss="alert" aria-label="Close">
                <i class="fa-solid fa-xmark"></i>
            </button>
          </div>
    <% } %>
</div>